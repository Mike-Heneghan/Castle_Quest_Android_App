<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/fightHeroItemImageViewId"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/fightHeroItemNameTextViewId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/bungee"
        android:text="TextView"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:background="#66ADD8E6"
        app:layout_constraintStart_toEndOf="@+id/fightHeroItemImageViewId"
        app:layout_constraintTop_toTopOf="@+id/fightHeroItemImageViewId" />

    <TextView
        android:id="@+id/fightHeroItemHpTextViewId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/bungee"
        android:text="TextView"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:background="#66ADD8E6"
        app:layout_constraintBottom_toBottomOf="@+id/fightHeroItemImageViewId"
        app:layout_constraintStart_toEndOf="@+id/fightHeroItemImageViewId" />

    <Button
        android:id="@+id/move1ButtonId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/bungee"
        android:onClick="onMove1ButtonClicked"
        android:text="@string/move_one"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/fightHeroItemImageViewId"
        app:layout_constraintEnd_toStartOf="@+id/move2ButtonId"
        app:layout_constraintTop_toTopOf="@+id/fightHeroItemImageViewId" />

    <Button
        android:id="@+id/move2ButtonId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/bungee"
        android:onClick="onMove2ButtonClicked"
        android:text="@string/move_two"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/fightHeroItemImageViewId"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/fightHeroItemImageViewId" />
</android.support.constraint.ConstraintLayout>