<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/heroImageViewId"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/heroTypeNameTextViewId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/bungee"
        android:gravity="left"
        android:text="TextView"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        android:background="#66ADD8E6"
        app:layout_constraintBottom_toBottomOf="@+id/heroImageViewId"
        app:layout_constraintStart_toEndOf="@+id/heroImageViewId"
        app:layout_constraintTop_toTopOf="@+id/heroImageViewId" />

    <Button
        android:id="@+id/selectForDetailedViewButtonId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/bungee"
        android:onClick="onHeroSelectButtonClicked"
        android:text="@string/select_hero"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/heroImageViewId"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/heroImageViewId" />
</android.support.constraint.ConstraintLayout>